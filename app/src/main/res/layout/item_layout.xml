<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/IdView"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/NameView"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/IdView"
        android:layout_toRightOf="@id/IdView"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/WordView"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/NameView"
        android:layout_toRightOf="@+id/NameView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/MistakesView"
        android:layout_alignTop="@+id/IdView"
        android:layout_toRightOf="@id/WordView"
        android:layout_alignParentEnd="true" />
</RelativeLayout>